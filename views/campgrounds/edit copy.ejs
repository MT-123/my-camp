<% layout('./layouts/boilerplate')%>
    <h1>edit the camp</h1>
    <form action="/campgrounds/<%= camp.id %>?_method=PUT" method="POST">
        <label for="title">Title</label>
        <input type="text" id="title" name="campground[title]" value="<%= camp.title %>"><br>
        <label for="price">Price</label>
        <input type="text" id="price" name="campground[price]" value="<%= camp.price %>"><br>
        <label for="description">Description</label>
        <input type="text" id="description" name="campground[description]" value="<%= camp.description %>"><br>
        <label for="location">Location</label>
        <input type="text" id="location" name="campground[location]" value="<%= camp.location %>"><br>
        <button>update</button>
    </form>
    <a href="/campgrounds/<%= camp.id %>">cancel</a><br>
    <a href="/campgrounds">all camps list</a>
