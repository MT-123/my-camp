<% layout('./layouts/boilerplate')%>
    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="text-center">Add a new camp</h1>
            <form action="/campgrounds" method="POST">
                <label class="form-label mt-3" for="title">Title</label>
                <input class="form-control border-dark-subtle" type="text" id="title" name="campground[title]">
                
                <label class="form-label mt-3" for="price">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text border-dark-subtle">$</span>
                    <input type="text" class="form-control border-dark-subtle" id="price" name="campground[price]">
                </div>
                
                <label class="form-label mt-3" for="description">Description</label>
                <div class="form-floating">
                    <textarea class="form-control border-dark-subtle" id="description"
                    name="campground[description]"></textarea>
                    <label for="description">description</label>
                </div>
                
                
                
                <label class="form-label mt-3" for="location">Location</label>
                <input class="form-control border-dark-subtle" type="text" id="location" name="campground[location]">
 
                <label class="form-label mt-3" for="image">Image url</label>
                <input class="form-control border-dark-subtle" type="text" id="image" name="campground[image]">

                <button class="btn btn-success mt-2 float-end">submmit</button>
            </form>
        </div>
    </div>